{
    "name" : "Tire Monitoring <span style='color:red;'>- NOT optimized</span>",
    
    "description" : "Capture DATA when (LAST AVM Picture > 100 Km) AND ( (SPEED is in [0..5 Km/h]) AND (TIRE_ANGLE > 200Â°))",
    
    "applicability" : "MTC Equation => Camera Type == AVM",
    
    "inputs" : {
      "distance": {
          "type": "ANDROID_SYST_PROP",
          "name": "PERF_ODOMETER"
      },
      "speed": {
          "type": "ANDROID_SYST_PROP",
          "name": "PERF_VEHICLE_SPEED"
      },
      "angle": {
          "type": "ANDROID_VENDOR_PROP",
          "name": "WHEEL_ANGLES_4WS"
      }
    },
    
    "states": [
        { "id": "none", "label": "OFF", "init": 1},
        { "id": "ON", "label":  "ON" }
      ],

    "transitions": [
    { "name": "start", "label": "start", "from": "none", "to": "ON", "action":null },
    { "name": "full", "label": "full",  "from": "ON", "to": "ON", "action":"capture_AVM" }
  ],

    "triggers": {
      "full": {
          "type": "ON_LOGIC",
          "logic":
              {"and" : [
                  {">" : [ { "var" : "distance" }, 100 ]},
                  {"<" : [ { "var" : "speed" }, 5 ]},
                  {">" : [ { "var" : "angle" }, 200 ]}
                  ]
              }, 
          "frequency": "1000"
      }
    },
    
    "actions": {
      "capture_AVM": {
          "type" : "upload",
          "data": {
              "type": "ANDROID_SYST_PROP",
              "name": "PERF_ODOMETER"
              },
              "speed": {
                  "type": "ANDROID_SYST_PROP",
                  "name": "PERF_VEHICLE_SPEED"
              },
              "angle": {
                  "type": "ANDROID_VENDOR_PROP",
                  "name": "WHEEL_ANGLES_4WS"
              }
        }
    },
    
  "mapping": {
    "none": 0,
    "ON": 1,
    "start": 0,
    "full": 1
  }
}
